<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginVertical="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/custom_captive_portal_editor"
            android:textStyle="bold"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <RadioButton
                android:id="@+id/url_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cp_url_default_title"
                android:textIsSelectable="false"
                android:paddingStart="20dp"
                android:layout_marginBottom="22dp"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <RadioButton
                android:id="@+id/url_ubuntu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cp_url_ubuntu_title"
                android:textIsSelectable="false"
                android:paddingStart="20dp"
                android:layout_marginBottom="22dp"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <!-- Soon to be Carbon -->
            <RadioButton
                android:id="@+id/url_yxa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cp_url_yxa_title"
                android:textIsSelectable="false"
                android:paddingStart="20dp"
                android:layout_marginBottom="22dp"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <RadioButton
                android:id="@+id/url_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textIsSelectable="false"
                android:textSize="18sp" />

        </RadioGroup>

        <EditText
            android:id="@+id/enter_custom_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioGroup"
            android:layout_marginStart="70dp"
            android:hint="@string/url_edit_hint"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textUri|textNoSuggestions"
            android:textIsSelectable="true"
            android:textSize="18sp"
            tools:ignore="NotSibling" />

    </RelativeLayout>
    <!-- Bottom buttons -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/reset_default"
            style="@style/Widget.AppCompat.ActionButton.CloseMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:backgroundTint="?android:attr/colorAccent"
            android:strokeColor="?android:attr/colorAccent"
            android:text="@string/default_button"
            android:textAllCaps="false"
            android:textColor="?android:textColorPrimary" />

        <Button
            android:id="@+id/submit"
            style="Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:backgroundTint="?android:attr/colorAccent"
            android:text="@string/submit_button"
            android:textAllCaps="false"
            android:textColor="?android:textColorPrimaryInverse"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</RelativeLayout>
