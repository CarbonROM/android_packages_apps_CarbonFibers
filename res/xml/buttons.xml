<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/buttons_category"
    android:key="buttons_fragment"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:title="@string/buttons_software_category">

        <ListPreference
            android:key="nav_bar_layout"
            android:title="@string/nav_bar_layout"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/nav_bar_layouts"
            android:entryValues="@array/nav_bar_layouts_values" />

    </PreferenceCategory>

    <com.android.settings.carbon.SystemSettingSwitchPreference
        android:key="advanced_reboot"
        android:title="@string/powermenu_advanced_reboot_title"
        android:summary="@string/powermenu_advanced_reboot_summary"
        android:defaultValue="false" />

</PreferenceScreen>
